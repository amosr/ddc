:set lang Flow
:set Synth
:set SuppressLetTypes


-- Multiply a parameter series by one created with replication.
:flow-lower..
module Test with letrec
repsme  [p : Proc] [k1 : Rate]
        (s  : Series# p k1 Float32#)
        (v  : Vector# Float32#)
        : Process# p k1
 = sfill# v 
        (smap2# mul# (srep# 23.0f32#) s)
;;


-- Fill a vector with segmentedly replicated elements.
:flow-lower..
module Test with letrec
repsme  [p : Proc] [k1 : Rate]
        (lens : Series# p k1 Nat#)  (s1   : Series# p k1 Float32#)
        (v    : Vector# Float32#)
        : Process# p k1
 = smkSegd# lens
    (/\(k2 : Rate). \(segd : Segd# k1 k2). 
     do s2 = sreps# segd s1
        s3 = smap#  (mul# 2.0f32#) s2 
        presize# (rsegd# segd (rid# [p])) (sfill# v s3))
;;


-- Multiply two series created by reps.
-- In the lowered code the multiply ends up in the segment context.
:flow-lower..
module Test with letrec
repsme  [p : Proc] [k1 : Rate]
        (lens : Series# p k1 Nat#) (s1 s2 : Series# p k1 Float32#)
        (v    : Vector# Float32#)
        : Process# p k1
 = smkSegd# lens
    (/\(k2 : Rate). \(segd : Segd# k1 k2).
     do s1r = sreps# segd s1
        s2r = sreps# segd s2
        s3  = smap2# mul# s1r s2r
        presize# (rsegd# segd (rid# [p])) (sfill# v s3))
;;


-- As above, but do the multiplication before replication.
:flow-lower..
module Test with letrec
repsme  [p : Proc] [k1 : Rate]
        (lens : Series# p k1 Nat#) (s1 s2 : Series# p k1 Float32#)
        (v    : Vector# Float32#)
        : Process# p k1
 = smkSegd# lens
    (/\(k2 : Rate). \(segd : Segd# k1 k2).
     do s3  = smap2# mul# s1 s2
        s3r = sreps# segd s3
        presize# (rsegd# segd (rid# [p])) (sfill# v s3r))
;;
